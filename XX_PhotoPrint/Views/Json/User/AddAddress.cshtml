@using XX_PhotoPrint.Service
@using System.Web.Script.Serialization
@{
    Layout = null;

    var js = new JavaScriptSerializer();

    var req = new Req();
    string account = req.String("Account", false, "未输入账号");
    string auth = req.String("Auth", false, "未输入授权");
    int cityId = req.Int("CityID", false, "缺少城市编号");
    int regionId = req.Int("RegionID", false, "缺少区域编号");
    string zip = req.String("Zip", false, "缺少邮编");
    string address = req.String("Address", false, "缺少地址");
    string receiver = req.String("Receiver", false, "缺少收货人");
    string telPhone = req.String("TelPhone");
    string mobile = req.String("Mobile", regex: "1\\d{10}", regexText: "手机格式错误");

    if (req.HasError)
    {
        Output.Write(js.Serialize(new { success = false, msg = req.FirstError, errors = req.GetErrors() }));
        return;
    }
    if (string.IsNullOrEmpty(telPhone) && string.IsNullOrEmpty(mobile))
    {
        Output.Write(js.Serialize(new { success = false, msg = "手机或固定电话必填一项" }));
        return;
    }

    auth = System.Web.Security.FormsAuthentication.HashPasswordForStoringInConfigFile(auth, "md5");
    string sAuth = UserService.GetAuth(account);
    if (!auth.Equals(sAuth, StringComparison.OrdinalIgnoreCase))
    {
        Output.Write(js.Serialize(new { success = false, msg = "授权错误" }));
        return;
    }

    int uid = UserService.GetUserID(account);
    int addressId;
    bool isCommonUse = SQL.QueryScalar<bool>("if exists (select 1 from UserAddress where UserID=@p0) select 0 else select 1", uid);

    SQL.Execute("insert into UserAddress (UserID,CityID,RegionID,Zip,Address,TelPhone,Mobile,IsCommonUse,Receiver) values (@p0,@p1,@p2,@p3,@p4,@p5,@p6,@p7,@p8)", out addressId, uid, cityId, regionId, zip, address, telPhone, mobile, isCommonUse, receiver);

    Output.Write(js.Serialize(new { success = true, addressId = addressId }));
    return;
}
