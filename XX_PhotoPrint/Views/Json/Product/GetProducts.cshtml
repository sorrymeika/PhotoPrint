@using XX_PhotoPrint.Service
@{
    Layout = null;

    var req = new Req();
    int page = req.Int("Page");
    int pageSize = req.Int("PageSize");
    string keywords = req.String("Keywords");
    string sort = req.String("Sort");
    string sortType = req.String("SortType");

    int total;
    var data = ProductService.Search(keywords, page, pageSize, sort, sortType, out total);

    Json.Write(new { success = true, total = total, data = data }, Output);
    return;
}
