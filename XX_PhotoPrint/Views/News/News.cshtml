@using XX_PhotoPrint.Service
@{
    SL.Util.RequestUtil req = new SL.Util.RequestUtil();

    var item = SL.Data.SQL.QuerySingle("select Title,Content from Activity where ActivityID=@p0", req.Int("id"));

    var title = Json.Decode(item["Title"].ToString());
    item["Title"] = title.t;
    item["SubTitle"] = title.s;

    ViewBag.Title = item.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main newswrap"><h2 style="text-align: center">@item.Title</h2>
    <div class="newscont">@(new MvcHtmlString(item.Content))</div>
</div>
